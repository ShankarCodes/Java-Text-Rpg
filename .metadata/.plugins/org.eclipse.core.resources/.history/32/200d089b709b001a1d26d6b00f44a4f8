package com.shankar.TextAdventure;
class Room
{
    Room east = null;
    Room north = null;
    Room south = null;
    Room west = null;
    String id;
    IO io;
    Room current;
    Room(IO io, Room current)
    {
        this.io = io;
        this.current = current;
    }
    
    void addEastExit(Room e)
    {
        east = e;
    }
    
    void addWestExit(Room e)
    {
        west = e;
    }
    
    void addNorthExit(Room e)
    {
        north = e;
    }
    
    void addSouthExit(Room e)
    {
        south = e;
    }
    
    void displayExits()
    {
        io.print("Obvious Exits:");
        io.print((north != null)?"North":"");
        io.print((south != null)?"South":"");
        io.print((east != null)?"East":"");
        io.print((west != null)?"West":"");
        io.println("");
    }
    void move(String loc)
    {
    	if (loc == "north")
    	{
    		if (north!=null)
    		    this.current = north;
    		else
    			io.println("There is no path that way");
    	}
    	if (loc == "south")
    	{
    		if (north!=null)
    		    this.current = south;
    		else
    			io.println("There is no path that way");
    	}
    	if (loc == "west")
    	{
    		if (north!=null)
    		    this.current = west;
    		else
    			io.println("There is no path that way");
    	}
    	if (loc == "east")
    	{
    		if (north!=null)
    		    this.current = east;
    		else
    			io.println("There is no path that way");
    	}
    	else
    		io.println("No such direction");
    }
    
    
}
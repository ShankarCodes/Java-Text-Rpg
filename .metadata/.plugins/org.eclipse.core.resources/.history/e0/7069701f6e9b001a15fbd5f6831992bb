package com.shankar.TextAdventure;

public class Level {
	Room currentRoom;
	Room start;
	IO io;
	Level(IO io)
	{
		this.io = io;
		start = new Room(io, currentRoom);
		currentRoom = start;
	}
	void test()
	{
		Room r1 = new Room(this.io, this.currentRoom);
		Room r2 = new Room(this.io, this.currentRoom);
		currentRoom.displayExits();
		r1.addNorthExit(r2);
		start.addEastExit(r1);
		start.move("east");
		currentRoom.displayExits();
	}
	public static void main(String args[])
	{
		Level l = new Level();
		l.test();
	}

}
